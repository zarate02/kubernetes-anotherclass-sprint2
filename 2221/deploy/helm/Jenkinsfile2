pipeline {
    agent any

    tools {
        gradle 'gradle-7.6.1'
        jdk 'jdk-17'
    }

    environment {
        CLASS_NUM = '2221'
    }

    stages {
        stage('헬름 배포') {
            steps {
                input message: '배포 시작', ok: "Yes"
                sh "helm upgrade api-tester-${CLASS_NUM} ./${CLASS_NUM}/deploy/helm/k8s/api-tester -n anotherclass-222 --create-namespace --install"
            }
        }
    }
}
